<h1>Invite others!</h1>
<div>
  <%= form_for :users, url: invite_users_path do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :rank %>
  <%= f.radio_button :rank, 'Admin' %> Admin
  <%= f.radio_button :rank, 'Mod' %> Mod
</div>

<div class="form-group">
<%= f.label :board_control %>
<%= f.collection_select(:name, Subreddit.all, :id, :name) %>
</div>

<%= f.submit %>
<% end %>
<%= link_to 'Back', post_index_path %>
