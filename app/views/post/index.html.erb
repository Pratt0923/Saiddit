<h1>Your posts</h1>
<% #all of current users subreddits will be shown here everntually %>
<%= link_to 'New Post', new_post_path %>
<% #need to sort posts by get_upvotes.size! %>
  <% @posts.each do |post| %><br>
    <div><%= post.title %></div>
    <div><%= post.content %></div>
    <div>There are: <%= post.comments.count %><%= link_to ' Comments', comment_index_path(post) %></div>

    <% if policy(post).edit? %>
    <div><%= link_to 'Edit', edit_post_path(post) %></div>
    <% end %>

    <% if policy(post).destroy? %>
    <div><%= link_to 'Destroy', post_path(post), :method => :delete %></div>
    <% end %>

    <%= link_to "upvote", upvote_path, method: :put %>
    <%= link_to "downvote", downvote_path, method: :put %>
    <div><%= post.get_upvotes.size %></div>
    <div><%= post.get_downvotes.size %></div>

  <% end %>
